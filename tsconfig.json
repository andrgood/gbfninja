{
    "compilerOptions": {
      "baseUrl": "./src",
      "paths": {
        "~*": ["./*"]
      },
      "outDir": "./dist/",
      "sourceMap": true,
      "noImplicitAny": true,
      "lib": ["dom", "esnext"],
      "module": "commonjs",
      "target": "ESNext",
      "jsx": "react",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true
    },
    "include": ["./src/**/*"]
  }